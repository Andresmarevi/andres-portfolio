---
import { getLangFromUrl, getTranslations, getLocalizedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
---

<footer class="bg-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-20">
	<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
			<!-- About Section -->
			<div>
				<h3 class="font-bold text-lg mb-4">Andrés Martínez Reviriego</h3>
				<p class="text-gray-600 dark:text-gray-400 text-sm">
					{t.footer.description}
				</p>
			</div>

			<!-- Quick Links -->
			<div>
				<h4 class="font-semibold mb-4">{t.footer.quickLinks}</h4>
				<ul class="space-y-2 text-sm">
					<li>
						<a href={getLocalizedPath('/', lang)} class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
							{t.nav.home}
						</a>
					</li>
					<li>
						<a href={getLocalizedPath('/projects', lang)} class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
							{t.nav.projects}
						</a>
					</li>
					<li>
						<a href={getLocalizedPath('/about', lang)} class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
							{t.nav.about}
						</a>
					</li>
				</ul>
			</div>

			<!-- Social Links -->
			<div>
				<h4 class="font-semibold mb-4">{t.footer.follow}</h4>
				<ul class="space-y-2 text-sm">
					<li>
						<a href="https://github.com/andresmarevi" target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
							GitHub
						</a>
					</li>
					<li>
						<a href="https://linkedin.com/in/andres-martinez-reviriego" target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
							LinkedIn
						</a>
					</li>
					<li>
						<a href="mailto:andresmarevi@gmail.com" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
							Email
						</a>
					</li>
				</ul>
			</div>
		</div>

		<!-- Copyright -->
		<div class="border-t border-gray-200 dark:border-gray-700 pt-8">
			<p class="text-center text-gray-600 dark:text-gray-400 text-sm">
				{t.footer.copyright}
			</p>
		</div>
	</div>
</footer>
