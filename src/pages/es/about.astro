---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl, getTranslations, getLocalizedPath } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
---

<BaseLayout title={t.about.title} description={t.about.description}>
	<section class="py-20 px-4 sm:px-6 lg:px-8">
		<div class="max-w-4xl mx-auto">
			<!-- Header -->
			<div class="text-center mb-16">
				<h1 class="text-5xl font-bold mb-6">{t.about.heading}</h1>
				<p class="text-xl text-gray-600 dark:text-gray-400">
					{t.about.subtitle}
				</p>
			</div>

			<!-- Content -->
			<div class="prose dark:prose-invert max-w-none">
				<div class="bg-white dark:bg-gray-800 rounded-lg p-8 shadow-md mb-8">
					<h2>{t.about.whoIAm.title}</h2>
					<p>
						{t.about.whoIAm.content}
					</p>
				</div>

				<div class="bg-white dark:bg-gray-800 rounded-lg p-8 shadow-md mb-8">
					<h2>{t.about.skills.title}</h2>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6 not-prose">
						<div>
							<h3 class="font-semibold mb-3">{t.about.skills.backend}</h3>
							<ul class="space-y-2">
								<li class="flex items-center">
									<span class="w-2 h-2 bg-blue-600 rounded-full mr-2"></span>
									Python & Django
								</li>
								<li class="flex items-center">
									<span class="w-2 h-2 bg-blue-600 rounded-full mr-2"></span>
									Machine Learning & Data Analysis
								</li>
								<li class="flex items-center">
									<span class="w-2 h-2 bg-blue-600 rounded-full mr-2"></span>
									SQL & MySQL
								</li>
								<li class="flex items-center">
									<span class="w-2 h-2 bg-blue-600 rounded-full mr-2"></span>
									Data Scraping & ETL
								</li>
							</ul>
						</div>
						<div>
							<h3 class="font-semibold mb-3">{t.about.skills.frontend}</h3>
							<ul class="space-y-2">
								<li class="flex items-center">
									<span class="w-2 h-2 bg-blue-600 rounded-full mr-2"></span>
									Vue 3 & TypeScript
								</li>
								<li class="flex items-center">
									<span class="w-2 h-2 bg-blue-600 rounded-full mr-2"></span>
									React & Modern JavaScript
								</li>
								<li class="flex items-center">
									<span class="w-2 h-2 bg-blue-600 rounded-full mr-2"></span>
									Git & Version Control
								</li>
								<li class="flex items-center">
									<span class="w-2 h-2 bg-blue-600 rounded-full mr-2"></span>
									API Design & Development
								</li>
							</ul>
						</div>
					</div>
				</div>

				<div class="bg-white dark:bg-gray-800 rounded-lg p-8 shadow-md mb-8">
					<h2>{t.about.focus.title}</h2>
					<p>
						{t.about.focus.content}
					</p>
				</div>

				<div class="bg-white dark:bg-gray-800 rounded-lg p-8 shadow-md">
					<h2>{t.about.beyond.title}</h2>
					<p>
						{t.about.beyond.content}
					</p>
				</div>
			</div>

			<!-- CTA -->
			<div class="mt-12 text-center">
				<a href={getLocalizedPath('/contact', lang)} class="inline-block px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 font-semibold transition-colors">
					{t.about.cta}
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
